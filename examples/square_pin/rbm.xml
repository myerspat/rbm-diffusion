    <section id="4" x0="30.0" y0="30.0" l1="10.0" l2="10.0"/>
  </sections>

  <cells>
    <cell id="1" material="fuel">
      <sections>1</sections>
    </cell>
    <cell id="2" material="reflector">
      <sections>2 3 4</sections>

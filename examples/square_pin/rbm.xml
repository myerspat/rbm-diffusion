<rbm>
  <materials>
    <material name="fuel" absorption="0.10" D="2.0" nu_fission="0.11"/>
    <material name="reflector" absorption="0.01" D="1.5" nu_fission="0.0"/>
  </materials>

  <sections>
    <section id="1" x0="0.0" y0="0.0" l1="30.0" l2="30.0"/>
    <section id="2" x0="0.0" y0="30.0" l1="30.0" l2="10.0"/>
